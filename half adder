#include<bits/stdc++.h>
using namespace std;
void half_adder(int A , int B){
    int sum ;
    int carry;
    sum = A ^ B;
    carry = A & B;
    cout << "SUM = "<< sum <<endl;
    cout << " carry = "<<carry<<endl;
}
int main(){
   int A = 1;
   int B = 0;
   half_adder(A , B);
    return 0;
}

output
SUM = 1
carry = 0
